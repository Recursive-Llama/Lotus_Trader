# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/lotus_trader
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password
POSTGRES_DB=lotus_trader
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# LLM Configuration
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Market Data Configuration
HYPERLIQUID_WS_URL=wss://api.hyperliquid.xyz/ws
HYPERLIQUID_API_KEY=your_hyperliquid_api_key
HYPERLIQUID_SECRET_KEY=your_hyperliquid_secret_key

# System Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development
DEBUG=false

# Trading Configuration
MAX_POSITION_SIZE=1000
RISK_LIMIT=0.02
TRADING_ENABLED=false

# API Configuration
API_HOST=localhost
API_PORT=8000
API_KEY=your_api_key

# Trading APIs
HELIUS_API_KEY=your_helius_api_key
JUPITER_API_URL=https://quote-api.jup.ag/v6
ZEROEX_API_KEY=your_0x_api_key  # Optional, has free tier

# Wallet Configuration
# Note: Base and Ethereum use the same wallet (same private key, different networks)
SOLANA_WALLET_PRIVATE_KEY=your_solana_private_key
ETHEREUM_WALLET_PRIVATE_KEY=your_ethereum_private_key
BASE_WALLET_PRIVATE_KEY=your_base_private_key  # Same as ETHEREUM_WALLET_PRIVATE_KEY

# Monitoring
SENTRY_DSN=your_sentry_dsn
PROMETHEUS_PORT=9090
